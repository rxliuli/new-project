{
  "name": "new-project",
  "displayName": "New Project",
  "description": "This is a vscode visual project creation plugin that attempts to provide a project creation panel in vscode similar to jetbrains ide",
  "version": "0.0.2",
  "publisher": "rxliuli",
  "scripts": {
    "start:webview": "npm --prefix ./webview-ui run start",
    "build:webview": "npm --prefix ./webview-ui run build",
    "vscode:prepublish": "pnpm build",
    "build": "esno build.js",
    "dev": "esno build.js -w",
    "release": "pnpm build && vsce package --yarn",
    "pretest": "pnpm build && pnpm lint",
    "lint": "eslint src --ext ts",
    "postinstall": "pnpx simple-git-hooks"
  },
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:new-project.newProject"
  ],
  "contributes": {
    "commands": [
      {
        "command": "new-project.newProject",
        "title": "New Project"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "new-project.newProject",
          "alt": "new-project.newProject",
          "group": "2_workspace"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/vscode-plugin-new-project"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@liuli-util/commitlint-standard-config": "^0.1.6",
    "@liuli-util/prettier-standard-config": "^0.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "esbuild": "^0.14.28",
    "eslint": "^7.19.0",
    "esno": "^0.14.1",
    "glob": "^7.1.6",
    "jest": "^27.4.3",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "sync": [
    "jest",
    "commitlint",
    "simplehooks"
  ],
  "prettier": "@liuli-util/prettier-standard-config",
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit $1",
    "pre-commit": "yarn lint-staged"
  },
  "commitlint": {
    "extends": [
      "@liuli-util/commitlint-standard-config"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,css,vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "fs-extra": "^10.0.1",
    "which": "^2.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  }
}
